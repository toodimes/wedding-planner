<div id="guestsApp">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <p class="lead text-muted">Guests</p>
        <table class="table table-striped" data-effect="fade">
          <thead>
            <tr>
              <td>ID</td>
              <td>Title</td>
              <td>Full Name</td>
              <td>Email</td>
              <td>Address</td>
              <td>City, State Zip</td>
            </tr>
          </thead>
          <tbody>
            <template v-for="guest in guests">
              <tr>
                <td>{{ guest.id }}</td>
                <td>{{ guest.title }}</td>
                <td>{{ guest.firstName }} {{ guest.lastName }}</td>
                <td>{{ guest.email }}</td>
                <td>{{ guest.address1 }} {{ guest.address2 }}</td>
                <td>{{ guest.city }}, {{ guest.state }} {{ guest.zip }}</td>
              </tr>
            </template>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
